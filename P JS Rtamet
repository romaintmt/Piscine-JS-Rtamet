EXO 09

function choomChoom(a){
if (a%2==0) {
  return 'Choom';
} else {
  return 'ChoomChoom'
}
}




// Ne touchez pas les lignes en dessous
module.exports = {
  choomChoom
}


EXO 10

function cyberNumber (a){
  if (a%3==0 && a%5==0){
    return 'CyberPunk2077';
  } if (a%3==0){
    return "Cyber";
  } if (a%5==0){
    return "Punk";
  }
   else {
   return 0;
  }
}


module.exports = {
  cyberNumber
}

EXO 11

function bissextile (year){
  if(year%4==0 && year%100!=0 || year%400==0 ){
    console.log("toto");
    return 0;
  } else {
    console.log("bibi");
    return 1;
  }
}


module.exports = {
  bissextile
}

EXO 12

